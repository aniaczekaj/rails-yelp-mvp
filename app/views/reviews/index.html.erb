<div class='container'>
<h1>Reviews</h1>
  <% @reviews.each do |review|  %>
    <div class='box'>
      <h2>Review <%=review.id %></h2>
      <h3><%= review.content %></h3>
      <h3>Rating: <%= review.rating %></h3>
    </div>
  <% end %>
  <%= link_to 'Back to the restaurant', restaurant_path(@restaurant), class: "btn btn-primary" %>
  <%= link_to 'Back to all restaurants',  restaurants_path, class: "btn btn-primary" %>
</div>
