<div class='container box-restaurant'>
  <h2>Add a review for <%= @restaurant.name.capitalize %></h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, label: 'Your review:' %>
    <%= f.input :rating, label: 'Rating: (0-5)'%>
    <%= f.submit "add a review ", class: "btn btn-primary" %>
  <% end %>
  <%= link_to 'Back to the restaurant', restaurant_path(@restaurant), class: "btn btn-primary" %>
</div>
